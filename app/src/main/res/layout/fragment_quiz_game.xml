<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="quiz"
            type="com.example.simplequiz.QuizFragment" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFFFFF"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/quiz_logo"
            style="@style/ImageStyle"
            >

        </ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/MediumTextStyle"
            tools:text="Which is the Independence day of Bangladesh?"
            android:text="@{quiz.currentQuestion.theQuestion}"

            />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/AnswerTextStyle"
                    android:id="@+id/option1"
                    tools:text="Option1"
                    android:text="@{quiz.answers[0]}"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/AnswerTextStyle"
                    android:id="@+id/option2"
                    tools:text="Option1"
                    android:text="@{quiz.answers[1]}"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/AnswerTextStyle"
                    android:id="@+id/option3"
                    tools:text="Option1"
                    android:text="@{quiz.answers[2]}"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/AnswerTextStyle"
                    android:id="@+id/option4"
                    tools:text="Option1"
                    android:text="@{quiz.answers[3]}"
                    />


            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</layout>